<% include ../partials/header %>
<div class="container">
    <h1 style="text-align: center;">Add a new comment to <%= campground.name %> </h1>
      <div style="width: 40%; margin: 30px auto;">
        <form action="/campgrounds/<%= campground._id %>/comments" method="POST">
            <div class="form-group">
            <textarea class="form-control" id="exampleTextarea" name="comment[text]" rows="6" placeholder="comment"></textarea>
            </div>
            <div class="form-group">
            <button class="btn btn-lg btn-primary btn-block">Add New</button>
            </div>
             </form>
            <form action="/campgrounds/<%= campground._id %>" method="GET">
                <button class="btn btn-lg btn-primary btn-block">Back</button>
            </form>

        
    </div>
</div>

 
<% include ../partials/footer %>