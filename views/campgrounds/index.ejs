<% include ../partials/header %>
  <div class="container">
     <header class="jumbotron">  
        <div class="container">
        <h1>Welcome to the YelpCamp!</h1>
            <p> View our hand picked campgrounds from all over the world!</p>  
                <p> 
                    <a href="/campgrounds/new" class="btn btn-primary btn-lg">Add New Campground</a>
                </p> 
        </div>
    </header>

 <h3>View Our most popular campgrounds!</h3>
<div class="row text-center" style="display:flex; flex-wrap: wrap;">
    <div class='col-lg-12'>
     </div>
        <% campgrounds.forEach(function (camp) { %>
        <div class="col-md-3" "col-sm-6">
            <div class="thumbnail" id="main" >
                <a href="/campgrounds/<%= camp._id %>"><img src="<%= camp.image %>" alt=""></a>
                <div class="caption">  
                    <h4><%=camp.name%></h4></div>
            </div>
            <p>
                <a href="/campgrounds/<%= camp._id %>" class="btn btn-primary">More Infomation</a>
            </p>
       
        </div> 
        <% }); %>
    </div>
 </div>  
   
<% include ../partials/footer %>