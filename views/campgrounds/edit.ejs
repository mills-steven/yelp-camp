<% include ../partials/header %>

<div class="container">
    <h1 style="text-align: center;">Editing: <%=campground.name%></h1>
      <div style="width: 40%; margin: 30px auto;">
        <form action="/campgrounds/<%= campground._id %>?_method=PUT" method="POST">
            <div class="form-group">
              <input class="form-control" type="text" name= "campground[name]" required value="<%=campground.name%>">
            </div>
            <div class="form-group">
            <input class="form-control" type="number" name= "campground[price]" required value"<%= campground.price %>" min="0.01" step="0.01">
            </div>
            <div class="form-group">
            <input class="form-control" type="text" name= "campground[image]"  required value="<%=campground.image%>">
            </div>
            <div class="form-group">
            <input class="form-control" type="text" name= "campground[description]" required value="<%=campground.description%>">
            </div>
            <div class="form-group">
            <button class="btn btn-lg btn-primary btn-block">Save</button>
            </div>                   
        </form>
             <form action="/campgrounds/<%= campground._id %>" method="GET">
                 <button class="btn btn-lg btn-primary btn-block">Back</button>
              </form>

    </div>
</div>


<% include ../partials/footer %>